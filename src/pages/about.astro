---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry, render } from 'astro:content';

const aboutEntry = await getEntry('about', 'index');
const { Content } = await render(aboutEntry);
---

<BaseLayout title="About - Simon Bukin" description="A little summary of Simon Bukin">
  <div class="max-w-2xl px-6 py-12 md:py-16">
    <h1 class="text-3xl font-bold mb-8">About</h1>

    <div class="prose">
      <Content />
    </div>
  </div>
</BaseLayout>
